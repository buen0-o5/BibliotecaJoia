@model BibliotecaJoia.Models.DTO.ConsultaEmprestimoDto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de Empréstimo</h1>

<div class="table-responsive">
    <table class="table table-bordered col-md-5">
        <tbody>
            <tr>
                <th scope="row">Cliente</th>
                <td>@Html.DisplayFor(model => model.Cliente)</td>
            </tr>

            <tr>
                <th scope="row">CPF</th>
                <td>@Html.DisplayFor(model => model.CPF)</td>
            </tr>

            <tr>
                <th scope="row">Livro</th>
                <td>@Html.DisplayFor(model => model.Livro)</td>
            </tr>
            <tr>
                <th scope="row">Autor</th>
                <td>@Html.DisplayFor(model => model.Autor)</td>
            </tr>

            <tr>

                <th scope="row">Editora</th>
                <td>@Html.DisplayFor(model => model.Editora)</td>
            </tr>
            <tr>
                <th scope="row">Data do empréstimo</th>
                <td>@Html.DisplayFor(model => model.DataEmprestimo)</td>
            </tr>

            <tr>
                <th scope="row">Data de devolução</th>
                <td>@Html.DisplayFor(model => model.DataDevolucao)</td>
            </tr>

            <tr>
                <th scope="row">Data devolução efetiva</th>
                <td>@Html.DisplayFor(model => model.DataDevolucaoEfetiva)</td>
            </tr>
            <tr>
                <th scope="row">Status do empréstimo</th>
                <td>@Html.DisplayFor(model => model.StatusEmprestimoAtual)</td>
            </tr>
            <tr>
                <th scope="row">Bibliotecario responsável</th>
                <td>@Html.DisplayFor(model => model.LoginBibliotecario)</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    @Html.ActionLink("Efetuar Devolução", "EfetuarDevolucao", new { emprestimoId = Model.Id, livroId = Model.LivroId }) |
    <a asp-action="Consulta" class="btn btn-primary">Voltar</a>
</div>
