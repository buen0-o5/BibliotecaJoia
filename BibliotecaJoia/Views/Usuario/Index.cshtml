@{ 
    ViewData["Title"] = "Usuario";   
}

<h1>Login de Acesso</h1>

<form method="post" asp-controller="usuario" asp-action="login">
    <table border="0" cellpadding="2" cellspacing="2">
        <tr>
            <td>Login</td>
            <td><input type="text" name="login" /></td>
        </tr>
        <tr>
            <td>Senha</td>
            <td><input type="password" name="senha" /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Login" /></td>
        </tr>

        @{
            if (TempData["loginError"] != null &&(bool)TempData["loginError"] == true)
            {
                <tr>
                    <td colspan="2">
                        <p style="color:red; font-weight:bold">Falha ao efetuar login</p>
                    </td>
                </tr>
            }

        }

    </table>
</form>
