@{ 
    ViewData["Title"] = "Emprestimo  Dvd";
}
<h1>Emprestimo de Dvds</h1>

<div class=" row">
    <div class="col-md-4">
        <form asp-action="EfetuarEmprestimo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <input class="form-control" name="Cliente" id="cliente" />
            </div>
            <div class="form-group">
                <label class="control-label">Dvd</label>
                <input class="form-control" name="Dvd" id="dvd" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section scripts{ 
    <script>
        $('#cliente').autocomplete({
            source: '@Url.Action("PesquisarClientes", "EmprestimoDvd")',
            minlength: 3
        });
        $('#dvd').autocomplete({
            source: '@Url.Action("Pesquisardvds", "EmprestimoDvd")',
            minlength: 3
        });
    </script>
}