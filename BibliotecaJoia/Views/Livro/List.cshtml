@model IEnumerable<BibliotecaJoia.Models.DTO.LivroDto>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Lista";
    string login = Context.Session.GetString("_Login");
}

<h1>Livros</h1>
  @if (login != null)
  {
    <p>
        <a asp-action="Create">Adicionar Livro</a>
    </p>
  }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                @if (login != null)
                {
                    <p>
                        @Html.ActionLink("Atualizar", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" }) 
                        @Html.ActionLink("Detalhe", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </p>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
